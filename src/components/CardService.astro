---
const { title, description, img, mensaje } = Astro.props;
const numero = "526241362782"; // NÃºmero en formato internacional (sin +)
---

<a
    href=`https://wa.me/${numero}?text=${mensaje}`
    target="_blank"
    class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow-sm md:flex-row md:max-w-3xl hover:bg-gray-100"
>
    <img
        class="object-cover w-full rounded-t-lg h-96 md:h-400 md:w-48 md:rounded-none md:rounded-s-lg"
        src={img}
        alt=""
    />
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5
            class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-black"
        >
            {title}
        </h5>
        <p class="mb-3 font-normal text-black dark:text-neutral-900">
            {description}
        </p>
    </div>
</a>
