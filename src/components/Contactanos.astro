<section class= "py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto flex flex-col lg:flex-row gap-16">
        <div class="lg:w-1/3">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Contactanos!</h2>
          <p class="text-xl text-gray-800">
            Pide mas informacion sobre nuestros servicios y productos.
          </p>
        </div>
        <div class="lg:w-2/3">
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">Nombre*</label>
                <input type="text" id="firstName" name="firstName" required 
                  class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500">
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Apellido/s*</label>
                <input type="text" id="lastName" name="lastName" required 
                  class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500">
              </div>
            </div>
            <div>
              <label for="workEmail" class="block text-sm font-medium text-gray-700 mb-1">Email*</label>
              <input type="email" id="workEmail" name="workEmail" required 
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500">
            </div>
            <div>
              <label for="phoneNumber" class="block text-sm font-medium text-gray-700 mb-1">Telefono*</label>
              <input type="tel" id="phoneNumber" name="phoneNumber" required 
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500">
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Que dudas tines y como podemos ayudar?</label>
              <textarea id="message" name="message" rows="4" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500"></textarea>
            </div>
            <div>
              <button type="submit" 
                class="px-6 py-3 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                Enviar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
  